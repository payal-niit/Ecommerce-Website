CREATE FORCE VIEW PUBLIC.PRODUCTVIEW
(PRODUCTID, PRODUCTNAME, QUANTITY, RATE, TOTALAMOUNT, 
TOTALAMOUNTPERPIECE, DISCOUNT, SHIPPINGCOST, DATEOFCREATION, 
DUPPATATYPE, KURTACOLOR, NECKSTYLE, OCCASION, PYJAMATYPE, SALWARFABRIC, 
SLEEVES, STITCHEDTYPE, STYLE, WASHCARE, WORK, SUBCATEGORYNAME, 
CATEGORYNAME, COMPANYNAME, SUPPLIERNAME, COLORNAME) 
AS 
SELECT P.PRODUCTID, P.PRODUCTNAME, P.QUANTITY, P.RATE, 
P.TOTALAMOUNT, P.TOTALAMOUNTPERPIECE, P.DISCOUNT, P.SHIPPINGCOST, P.DATEOFCREATION, 
PD.DUPPATATYPE, PD.KURTACOLOR, PD.NECKSTYLE, PD.OCCASION, PD.PYJAMATYPE, 
PD.SALWARFABRIC, PD.SLEEVES, PD.STITCHEDTYPE, PD.STYLE, PD.WASHCARE, PD.WORK, 
SC.SUBCATEGORYNAME, C.CATEGORYNAME, S.COMPANYNAME, S.SUPPLIERNAME, 
CL.COLORNAME FROM PUBLIC.PRODUCT P INNER JOIN PUBLIC.PRODUCTDETAIL PD ON 1=1 
INNER JOIN PUBLIC.SUBCATEGORY SC ON 1=1 
INNER JOIN PUBLIC.CATEGORY C ON 1=1 INNER JOIN PUBLIC.SUPPLIER S ON 1=1 
INNER JOIN PUBLIC.COLOR CL ON 1=1 
WHERE (S.SUPPLIERID = P.SUPPLIERID) AND ((CL.COLORID = P.COLORID) 
AND ((SC.SUBCATEGORYID = P.SUBCATEGORYID) AND ((P.PRODUCTID = PD.PRODUCTID) 
AND (C.CATEGORYID = P.CATEGORYID))))